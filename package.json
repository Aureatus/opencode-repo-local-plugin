{
  "name": "opencode-repo-local-plugin",
  "version": "0.1.0",
  "description": "OpenCode plugin to clone or update repositories locally for built-in tooling",
  "packageManager": "bun@1.2.22",
  "type": "module",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "index.d.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bunx tsdown --watch",
    "build": "bunx tsdown --fail-on-warn",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:integration": "bun run scripts/integration-test.ts",
    "check:no-ignores": "bun run scripts/check-no-ignores.ts",
    "lint": "ultracite check --error-on-warnings",
    "check:core": "bun run check:no-ignores && bun run lint && bun run typecheck && bun run test && bun run build",
    "check": "concurrently --kill-others-on-fail --success all --names core,integration \"bun run check:core\" \"bun run test:integration\"",
    "fix:safe": "ultracite fix",
    "prepare": "husky",
    "prepack": "bun run build",
    "fix": "ultracite fix --unsafe && bun run check:no-ignores"
  },
  "keywords": [
    "opencode",
    "plugin",
    "git",
    "clone"
  ],
  "license": "MIT",
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.0.150"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@types/bun": "latest",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "ultracite": "7.1.4"
  }
}
