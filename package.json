{
  "name": "opencode-repo-local-plugin",
  "version": "0.1.0",
  "description": "OpenCode plugin to clone or update repositories locally for built-in tooling",
  "packageManager": "bun@1.2.22",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "index.d.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bunx tsdown --watch",
    "build": "bunx tsdown",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:integration": "bun run scripts/integration-test.ts",
    "check": "bun run typecheck && bun run test && bun run build && bun run test:integration",
    "prepare": "husky",
    "prepack": "bun run build"
  },
  "keywords": [
    "opencode",
    "plugin",
    "git",
    "clone"
  ],
  "license": "MIT",
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.0.150"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "tsdown": "^0.14.2",
    "typescript": "^5.9.3"
  }
}
